	<Spawn Index="56" MapNumber1="0" MapNumber2="3" MapNumber3="-1" MapNumber4="-1" Distance="30" StartX="10" StartY="10" EndX="240" EndY="240" Dir="-1" Count="2" /> <!-- Death Bone -->

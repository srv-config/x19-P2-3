//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
//
// STRICTLY NO COMMENTS INSIDE TAGS 
-->

<LanguageSystem>
	<Lang ID="0" FileName="English.xml"/> <!-- Lang ID = 0 is default language, enabled by default -->
	<Lang ID="1" FileName="Spanish.xml" Enable="0"/>
	<Lang ID="2" FileName="Portuguese.xml" Enable="0"/>
	<Lang ID="3" FileName="Korean.xml" Enable="0" />
	<Lang ID="4" FileName="Chinese.xml" Enable="0" />
	<Lang ID="5" FileName="Vietnamese.xml" Enable="0" />
</LanguageSystem>